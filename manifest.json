{
  "name": "Classroom GPA",
  "version": "1.0",
  "description": "ექსთენშელი GPA-ს გამოსათვლელად",
  "permissions": ["tabs", "activeTab", "https://classroom.btu.edu.ge/"],
  "content_scripts": [
    {
      "matches": ["ge/student/me/index"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "logo-short.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
